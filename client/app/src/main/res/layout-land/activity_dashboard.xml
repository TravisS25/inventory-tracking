<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/view_scanned_inventory"
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="25dp"
        android:onClick="viewScannedInventory"
        android:text="@string/view_scanned_inventory"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/look_up_inventory"
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:onClick="lookUpInventory"
        android:text="@string/look_up_inventory"
        app:layout_constraintEnd_toStartOf="@+id/view_scanned_inventory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/scan_inventory"
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="25dp"
        android:onClick="defaultMachineSettings"
        android:text="@string/default_machine_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_scanned_inventory" />

    <Button
        android:id="@+id/scan_inventory2"
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:onClick="scanInventory"
        android:text="@string/scan_inventory"
        app:layout_constraintEnd_toStartOf="@+id/scan_inventory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/look_up_inventory" />

    <Button
        android:id="@+id/login_logout"
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:onClick="login"
        android:text="@string/login"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scan_inventory2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="25dp"
        android:text="Button"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scan_inventory" />

</android.support.constraint.ConstraintLayout>